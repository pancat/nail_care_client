<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_bg_white"
    android:orientation="vertical"
>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp" >

        <com.pancat.fanrong.common.CircleImageView
            android:id="@+id/user_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/hair_styles" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/user_img"
            android:text="Mary"
            android:textColor="#000000"
            android:textStyle="bold" />
    </RelativeLayout>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="@null"
        android:gravity="left|top"
        android:hint="写点什么吧..."
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_location" />

        <Button
            android:id="@+id/btn_add_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:onClick="onClick"
            android:text="Add your location"
            android:textColor="#6c6c6c" />
    </LinearLayout>
    
    <!-- 显示选择的图片的GridView -->
    <GridView 
        android:id="@+id/selected_image_gridview"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:horizontalSpacing="3dp"        
        android:numColumns="4"
        android:scrollbars="none"
        android:verticalSpacing="5dp"
        >
    </GridView>
    
	<LinearLayout 
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:background="@drawable/corner_bg_gray"
	    android:gravity="center_vertical"
	    >

	    <LinearLayout
	        android:id="@+id/upload_camera"
	        android:layout_width="80dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dp"
	        android:background="@drawable/btn_send_bg_selector"
	        
	        android:gravity="center" >

	        <ImageView 
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:background="@drawable/camera_small"
	            />
	        <TextView 
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:text="拍照"
	            android:textColor="#514e4e"
	            android:textSize="12sp"
	            android:layout_marginLeft="5dp"
	            />
	    </LinearLayout>
	    <ImageView
	        android:layout_height="fill_parent"
	        android:layout_width="wrap_content"
	        android:background="@drawable/cutline_1px_upright"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        />
	    
	     <LinearLayout
	        android:id="@+id/upload_file"
	        android:layout_width="90dp"
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn_send_bg_selector"
	        android:gravity="center" >

	        <ImageView 
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:background="@drawable/file_small"
	            />
	        <TextView 
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:text="本地图片"
	            android:textColor="#514e4e"
	            android:textSize="12sp"
	            android:layout_marginLeft="5dp"
	            />
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_height="fill_parent"
	        android:layout_width="fill_parent"
	        android:gravity="center_vertical|right"
	        >
	        <ImageButton 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:background="@drawable/ic_send_green_24"
	        android:layout_marginRight="15dp"
	        />
	    </LinearLayout>
	    
	</LinearLayout>
</LinearLayout>