<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/panel_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:padding="5dp"
    android:background="#eeeeee"
    >

    <FrameLayout android:layout_width="match_parent"
        android:layout_height="match_parent">
     
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent">
       
		    <com.pancat.fanrong.waterfall.widget.ScaleImageView
		        android:id="@+id/product_img"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center"/>  
        </LinearLayout>
        <ImageView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/product_up"
            android:scaleType="fitXY"/>
    </FrameLayout>
    
	 	<LinearLayout android:orientation="horizontal"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/product_middle_white"
		        >
				
		        <TextView android:id="@+id/product_title"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:padding="10dp"/>
		        
		        <TextView android:id="@+id/product_price"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:padding="10dp"/>
		</LinearLayout>
		   
		 <ImageView android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:src="@drawable/cutline_1px"
		     android:scaleType="fitXY"/>
	     
	 <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/product_down_white">
         
		<LinearLayout android:orientation="horizontal"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:padding="5dp">
		        
		        <com.pancat.fanrong.common.CircleImageView 
		            android:id="@+id/product_author_img"
		            android:layout_width="45dp"
		            android:layout_height="45dp"
		            android:padding="5dp"
		           />
		        <TextView android:id="@+id/product_author"
		            android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:layout_weight="1"
		            android:gravity="center_vertical"/>
		        
				<LinearLayout 
				    android:layout_width="wrap_content"
		            android:layout_height="match_parent"
		            android:padding="5dp"
		            android:orientation="vertical"
		            >
			        <ImageView android:id="@+id/product_hot"
			            android:layout_width="wrap_content"
			            android:layout_height="0dp"
			            android:layout_weight="1.5"
			            android:scaleType="center"
			            />
			        <TextView android:id="@+id/product_hotnum"
			            android:layout_width="match_parent"
			            android:layout_height="0dp"
			            android:layout_weight="1"
			            android:gravity="center"
			             android:textColor="#999999"
			            android:textSize="12dp"
			            android:text="0"
			            />
		        </LinearLayout>
		 </LinearLayout>
	 </LinearLayout>
</LinearLayout>